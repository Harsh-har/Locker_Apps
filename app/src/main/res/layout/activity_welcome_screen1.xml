<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeScreen1">


  <ImageView
    android:id="@+id/illustration_image"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="68dp"
    android:scaleType="centerInside"
    android:src="@drawable/welcomfirst"
    app:layout_constraintEnd_toEndOf="parent"

    app:layout_constraintHeight_percent="0.5"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rounded_bottom_section"
        android:layout_width="380dp"
        android:layout_height="355dp"
        android:layout_marginTop="340dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rectangle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/illustration_image" />

    <Button
        android:id="@+id/button"
        android:layout_width="185dp"
        android:layout_height="47dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/gradient_background"
        android:text="Start Now"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="secure your phone and protect\n
         your apps and data"
        android:textColor="#D9FFFFFF"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/rounded_bottom_section"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="253dp"
        android:layout_height="42dp"
        android:layout_marginTop="76dp"
        android:text="Welcome to App-lock"
        android:textColor="@android:color/white"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/illustration_image" />
</androidx.constraintlayout.widget.ConstraintLayout>